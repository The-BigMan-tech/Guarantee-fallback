{
    "scopeName": "source.fog",
    "patterns": [
        { "include": "#angleBrackets" },
        { "include": "#otherPatterns" }
    ],
    "repository": {
        "angleBrackets": {
            "name": "angle.brackets.fog",
            "begin": "<",
            "beginCaptures": { "0": { "name": "punctuation.angle.begin.fog" } },
            "end": ">",
            "endCaptures": { "0": { "name": "punctuation.angle.end.fog" } },
            "patterns": [
                {
                    "name": "reference.fog",
                    "match": "[a-zA-Z]+"
                }
            ]
        },
        "otherPatterns": {
            "patterns":[
                {
                    "name": "constant.name.fog",
                    "match": "\\:[a-zA-Z]+" 
                },
                {
                    "name": "constant.name.strict.fog",
                    "match": "\\![a-zA-Z]+" 
                },
                {
                    "name": "constant.number.fog",
                    "match": "-?[0-9]+(\\.[0-9]+)?"
                },
                {
                    "name": "constant.alias.fog",
                    "match": "#[a-zA-Z]+" 
                },
                {
                    "name": "constant.predicate.fog",
                    "match": "\\*[a-zA-Z]+"
                },
                {
                    "name": "keyword.alias.fog",
                    "match": "\\balias\\b" 
                },
                {
                    "name": "constant.plainword.fog",
                    "match": "\\b[a-zA-Z]+\\b" 
                },
                {
                    "name": "terminator.fog",
                    "match": "\\."
                },
                {
                    "name": "terminator.and.fog",
                    "match": "\\&and"
                },
                {
                    "name": "comment.line.fog",
                    "begin": "//",
                    "end": "$" 
                },
                {
                    "name": "punctuation.fog",
                    "match": "[,()\\[\\];?!'\\=]" 
                }
            ]
        }
    }
}
