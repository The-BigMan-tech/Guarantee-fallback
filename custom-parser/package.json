{
  "name": "lib-scaffold",
  "version": "1.0.0",
  "description": "A TypeScript library project scaffold providing ready-to-use build and debug tooling",
  "scripts": {
    "compile": "pnpm exec swc ./src -d build",
    "bundle": "rollup -c",
    "clean:intermediateBundle": "cmd /c del dist\\bundle.js && del dist\\bundle.js.map",
    "minify": "terser dist/bundle.js -o dist/bundle-min.js --compress --mangle --source-map \"content=dist/bundle.js.map,url=bundle-min.js.map,includeSources\"",
    "gen:types": "tsc",
    "watch:src": "nodemon --watch src --ext ts,json",
    "build": "pnpm run compile && pnpm run gen:types && pnpm run bundle && pnpm run minify && pnpm run clean:intermediateBundle",
    "exec:main": "node ./build/src/main.js",
    "exec:bundle": "node ./dist/bundle-min.js",
    "start:main": "pnpm run compile && pnpm run exec:main",
    "dev:main": "pnpm run watch:src --exec \"pnpm run start:main\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint:src": "eslint \"src/**/*.{ts,tsx,js}\" \"tests/**/*.{ts,tsx,js}\"",
    "lint:watch": "pnpm run watch:src --exec \"pnpm run lint:src\"",
    "lint:fix": "pnpm run lint:src --fix",
    "grammar:gen":"antlr-ng -Dlanguage=TypeScript -o src/generated/ src/grammars/dsl.g4",
    "grammar:watch": "nodemon --watch src/grammars --ext g4 --exec \"pnpm run grammar:gen\""

  }, 
  "main": "./dist/bundle-min.js",
  "types": "./dist/bundle-min.d.ts",
  "files": [
    "dist",
    "build"
  ],
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@lezer/common": "^1.2.3",
    "@lezer/generator": "^1.8.0",
    "@lezer/javascript": "^1.5.1",
    "@lezer/lr": "^1.4.2",
    "@types/deep-equal": "^1.0.4",
    "antlr-ng": "^1.0.10",
    "antlr4ng": "^3.0.16",
    "combinatorial-generators": "^1.1.2",
    "deep-equal": "^2.2.3",
    "heap-js": "^2.6.0",
    "lru-cache": "^11.1.0",
    "safe-stable-stringify": "^2.5.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "typescript-eslint": "^8.39.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
