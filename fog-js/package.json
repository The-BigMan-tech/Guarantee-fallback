{
    "name": "fog-js",
    "main": "./dist/bundle-min.js",
    "types": "./dist/bundle-min.d.ts",
    "version": "1.0.9",
    "description": "A TypeScript library project scaffold providing ready-to-use build and debug tooling",
    "scripts": {
        "local-registry": "verdaccio",
        "compile:full": "swc ./src -d build --delete-dir-on-start --copy-files",
        "compile:watch": "pnpm run compile:full && jiti ./utils/watch-compile.ts",
        "bundle": "rollup -c",
        "minify": "terser ./dist/bundle.js -o ./dist/bundle-min.js --compress --mangle  --ecma 2022 --module --source-map \"content=dist/bundle.js.map,url=bundle-min.js.map,includeSources\"",
        "gen:types": "tsc",
        "watch:src": "nodemon --watch src --ext ts,json",
        "watch:build": "nodemon --watch build --ext js,json",
        "build": "pnpm run lint:src && pnpm run test && pnpm run compile:full -s false && pnpm run gen:types && jiti ./utils/clear-dist.ts && pnpm run bundle && pnpm run minify && jiti ./utils/remove-regular-bundle.ts",
        "exec:main": "node ./build/src/main.js",
        "exec:main:watch": "pnpm run watch:build --exec \"pnpm run exec:main\"",
        "exec:bundle": "node ./dist/bundle-min.js",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:mutation": "stryker run stryker.config.js",
        "lint:src": "eslint \"src/**/*.{ts,tsx,js}\" \"tests/**/*.{ts,tsx,js}\"",
        "lint:watch": "pnpm run watch:src --exec \"pnpm run lint:src\"",
        "lint:fix": "pnpm run lint:src --fix",
        "resolve:doc": "jiti ./src/examples/resolve.ts"
    },
    "files": [
        "dist",
        "build"
    ],
    "type": "module",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@stryker-mutator/api": "^9.0.1",
        "@stryker-mutator/core": "^9.0.1",
        "@stryker-mutator/typescript-checker": "^9.0.1",
        "@stryker-mutator/vitest-runner": "^9.0.1",
        "@swc/cli": "^0.7.8",
        "@swc/core": "^1.13.3",
        "@types/validate-npm-package-name": "^4.0.2",
        "@vitest/coverage-v8": "3.2.4",
        "chalk": "^5.5.0",
        "chokidar": "^4.0.3",
        "concurrently": "^9.2.0",
        "eslint": "^9.33.0",
        "eslint-plugin-import": "^2.32.0",
        "fast-check": "^4.2.0",
        "globals": "^16.3.0",
        "jiti": "^2.5.1",
        "nodemon": "^3.1.10",
        "rollup": "^4.46.2",
        "rollup-plugin-dts": "^6.2.1",
        "rollup-plugin-typescript-paths": "^1.5.0",
        "safe-stable-stringify": "^2.5.0",
        "terser": "^5.43.1",
        "throttle-debounce": "^5.0.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.1",
        "validate-npm-package-name": "^6.0.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@types/node-ipc": "^9.2.3",
        "commander": "^14.0.0",
        "denque": "^2.1.0",
        "es-main": "^1.4.0",
        "json-rpc-2.0": "^1.7.1",
        "node-ipc": "^12.0.0",
        "object-sizeof": "^2.6.5",
        "rxjs": "^7.8.2",
        "ts-morph": "^26.0.0",
        "uuid": "^11.1.0",
        "zod": "^4.1.5"
    }
}
