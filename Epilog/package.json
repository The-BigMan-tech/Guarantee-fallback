{
  "name": "epilog",
  "main": "./dist/bundle-min.js",
  "types": "./dist/bundle-min.d.ts",
  "bin": {
    "epilog": "./dist/bundle-min.js"
  },
  "version": "1.0.0",
  "description": "A TypeScript library project scaffold providing ready-to-use build and debug tooling",
  "scripts": {
    "compile:full": "swc ./src -d build --delete-dir-on-start",
    "compile:watch": "pnpm run compile:full && jiti ./watch-compile.ts",
    "bundle": "rollup -c",
    "minify": "terser dist/bundle.js -o dist/bundle-min.js --compress --mangle  --ecma 2022 --module --source-map \"content=dist/bundle.js.map,url=bundle-min.js.map,includeSources\"",
    "gen:types": "tsc",
    "watch:src": "nodemon --watch src --ext ts,json",
    "watch:build": "nodemon --watch build --ext js,json",
    "build": "pnpm run lint:src && pnpm run test && pnpm run compile:full -s false && pnpm run gen:types && jiti ./clear-dist.ts && pnpm run bundle && pnpm run minify && jiti ./remove-regular-bundle.ts",
    "exec:main": "node ./build/src/main.js",
    "exec:bundle": "node ./dist/bundle-min.js",
    "exec:main:watch": "pnpm run watch:build --exec \"pnpm run exec:main\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint:src": "eslint \"src/**/*.{ts,tsx,js}\" \"tests/**/*.{ts,tsx,js}\"",
    "lint:watch": "pnpm run watch:src --exec \"pnpm run lint:src\"",
    "lint:fix": "pnpm run lint:src --fix",
    "grammar:gen": "antlr-ng -Dlanguage=TypeScript -v -o src/generated/ src/grammars/DSL.g4",
    "grammar:watch": "nodemon --watch src/grammars --ext g4 --exec \"pnpm run grammar:gen\""
  },
  "files": [
    "dist",
    "build"
  ],
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "chokidar": "^4.0.3",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "throttle-debounce": "^5.0.2",
    "typescript-eslint": "^8.39.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@lezer/common": "^1.2.3",
    "@lezer/generator": "^1.8.0",
    "@lezer/javascript": "^1.5.1",
    "@lezer/lr": "^1.4.2",
    "@sinclair/typebox": "^0.34.40",
    "@types/deep-equal": "^1.0.4",
    "@types/node-ipc": "^9.2.3",
    "antlr-ng": "^1.0.10",
    "antlr4ng": "^3.0.16",
    "combinatorial-generators": "^1.1.2",
    "commander": "^14.0.0",
    "deep-equal": "^2.2.3",
    "denque": "^2.1.0",
    "es-main": "^1.4.0",
    "fastest-levenshtein": "^1.0.16",
    "heap-js": "^2.6.0",
    "json-colorizer": "^3.0.1",
    "json-rpc-2.0": "^1.7.1",
    "lru-cache": "^11.1.0",
    "node-ipc": "^12.0.0",
    "safe-stable-stringify": "^2.5.0",
    "uuid": "^11.1.0"
  }
}
